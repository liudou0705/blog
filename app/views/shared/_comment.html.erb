
<div class="reply clearfix">
       <div class="avatar">
         <%= link_to '#' do %>
           <%= image_tag comment.user.avatar, class: 'image-circle' %>
         <% end %>
       </div>
       <div class="body">
         <div class="heading">
            <h5 class="name"><%= link_to comment.user.name, "#" %></h5>
            <span class="datetime">
              <%= time_ago_in_words comment.created_at %> ago
            </span>
         </div>
         <%= comment.content %>
       </div>
       <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</div>

